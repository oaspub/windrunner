{
  "name": "@windrunner/server",
  "version": "0.0.0",
  "description": "A highly-opinionated Node.js web server framework for building fast, secure, and scalable microservices and clients.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "lint": "ts-standard --verbose | snazzy",
    "lint:fix": "ts-standard --fix --verbose | snazzy",
    "test": "ava",
    "test:coverage": "c8 ava"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.29.6",
    "@tsconfig/node18": "^1.0.1",
    "@windrunner/contract": "*",
    "@windrunner/middleware": "*",
    "change-case": "^4.1.2",
    "pino-http": "^8.3.3",
    "pluralize": "^8.0.0",
    "radix3": "^1.0.0"
  },
  "devDependencies": {
    "@tsconfig/node18": "^1.0.1",
    "@types/node": "^18.14.0",
    "ava": "^5.1.1",
    "c8": "^7.12.0",
    "snazzy": "^9.0.0",
    "ts-node": "^10.9.1",
    "ts-standard": "^12.0.2",
    "typescript": "^4.9.5"
  },
  "optionalDependencies": {
    "pino": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oaspub/windrunner.git"
  },
  "author": "Spencer Tuft <stuft2@protonmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/oaspub/windrunner/issues"
  },
  "homepage": "https://github.com/oaspub/windrunner#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "files": [
      "test/**/*.spec.ts"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
